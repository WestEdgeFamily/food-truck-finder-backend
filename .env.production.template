# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# API Configuration
API_URL=https://food-truck-finder-api.onrender.com/api

# Google Services
GOOGLE_MAPS_API_KEY=your-restricted-google-maps-api-key
GOOGLE_CLIENT_ID=your-google-oauth-client-id

# POS System OAuth Client IDs
SQUARE_CLIENT_ID=your-square-client-id
TOAST_CLIENT_ID=your-toast-client-id
CLOVER_CLIENT_ID=your-clover-client-id
SHOPIFY_CLIENT_ID=your-shopify-client-id
TOUCHBISTRO_CLIENT_ID=your-touchbistro-client-id

# Social Media OAuth
FACEBOOK_APP_ID=your-facebook-app-id

# Feature Flags
ENABLE_CRASHLYTICS=true
ENABLE_ANALYTICS=true

# Optional: Sentry for error tracking
SENTRY_DSN=your-sentry-dsn