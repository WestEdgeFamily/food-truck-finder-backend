# Army Of One Creator - Environment Configuration

# Server Settings
PORT=3001
NODE_ENV=development

# AI Services
OPENAI_API_KEY=your_openai_api_key_here

# Social Media API Keys (Optional - for publishing features)
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
YOUTUBE_API_KEY=your_youtube_api_key

# Camera Settings
DEFAULT_MOTION_SENSITIVITY=5000
DEFAULT_RECORDING_DURATION=30

# Content Processing
VIRAL_SCORE_THRESHOLD=0.6
AUTO_PROCESSING_ENABLED=true
CONTENT_APPROVAL_REQUIRED=true

# File Paths
RECORDINGS_PATH=./recordings
TEMP_PATH=./temp
DATA_PATH=./data

# Advanced Settings
MAX_CONCURRENT_PROCESSING=2
CLIP_MAX_DURATION=30
MIN_VIRAL_SCORE=0.3 