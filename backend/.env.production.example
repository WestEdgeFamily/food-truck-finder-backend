# Production Environment Variables for Automated Verification
# Copy this file to .env and fill in your actual API keys

# Database
MONGODB_URI=your_mongodb_production_uri
PORT=5000

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===== AUTOMATED VERIFICATION API KEYS =====

# EIN Verification Services
THOMSON_REUTERS_API_KEY=your_thomson_reuters_clear_api_key
LEXISNEXIS_API_KEY=your_lexisnexis_business_verification_api_key

# Business Data Services  
DNB_API_KEY=your_dun_and_bradstreet_api_key
