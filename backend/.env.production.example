# State Secretary of State APIs
COLORADO_SOS_API_KEY=your_colorado_sos_api_key
CALIFORNIA_SOS_API_KEY=your_california_sos_api_key  
TEXAS_SOS_API_KEY=your_texas_sos_api_key
FLORIDA_SOS_API_KEY=your_florida_sos_api_key
